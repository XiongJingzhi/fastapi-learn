            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/compare/{use_domain_exception}": {
      "get": {
        "summary": "Compare Error Handling",
        "description": "对比两种错误处理方式\n\n- use_domain_exception=true: 使用领域异常（推荐）\n- use_domain_exception=false: 使用 HTTPException（不推荐）\n\n访问：/compare/true 或 /compare/false",
        "operationId": "compare_error_handling_compare__use_domain_exception__get",
        "parameters": [
          {
            "name": "use_domain_exception",
            "in": "path",
            "required": true,
            "schema": {
              "type": "boolean",
              "title": "Use Domain Exception"
            }
          },
          {
            "name": "user_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 999,
              "title": "User Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
