            }
          }
        }
      }
    },
    "/users/special": {
      "post": {
        "summary": "Create Special User",
        "description": "创建特殊用户 - 使用自定义验证异常",
        "operationId": "create_special_user_users_special_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SpecialUserCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
